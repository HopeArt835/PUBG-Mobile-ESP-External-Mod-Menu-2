<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doom_only_bg">
    <View android:background="#00585899" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/arc_progress"
        app:layout_constraintEnd_toEndOf="@+id/arc_progress"
        app:layout_constraintStart_toStartOf="@+id/arc_progress"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/baar"
            android:fontFamily="@font/altehassregular"
            android:gravity="center"
            android:text="Please Wait Until The Patch Downloads : "
            android:textColor="#fff7f1e3"
            android:textSize="15sp" />
    </LinearLayout>
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/arc_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:arc_finished_color="#3f51b5"
        app:arc_progress="0"
        app:arc_stroke_width="15dp"
        app:arc_text_color="#fff7f1e3"
        app:arc_unfinished_color="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/hackinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />
    <TextView
        android:id="@+id/hackinfo"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="#0040407a"
        android:fontFamily="@font/altehassregular"
        android:gravity="center_horizontal"
        android:padding="14dp"
        android:text="Note:\10For Rank Push Play Safe using Wallhack with Colorhack Autoheadshot Less Recoil and Antenna"
        android:textAlignment="center"
        android:textColor="#fff7f1e3"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/arc_progress"
        app:layout_constraintStart_toStartOf="@+id/arc_progress" />
    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/altehassbold"
        android:text="Total Size 0KB"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/hackinfo"
        app:layout_constraintEnd_toEndOf="@+id/arc_progress"
        app:layout_constraintStart_toStartOf="@+id/arc_progress"
        app:layout_constraintTop_toBottomOf="@+id/arc_progress" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0040407a"
        android:fontFamily="@font/coolvetica_rg"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="DOOM Antiban "
        android:textAlignment="center"
        android:textColor="#fff7f1e3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />
</androidx.constraintlayout.widget.ConstraintLayout>
